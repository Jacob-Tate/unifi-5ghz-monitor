# UniFi Controller Configuration
UNIFI_HOST=ip_address
UNIFI_USERNAME=username
UNIFI_PASSWORD=password
UNIFI_PORT=8443
UNIFI_SITE=default

# Monitoring Settings
CHECK_INTERVAL=300
AUTO_RESTART=false
#VERBOSE_MODE=false
#TRACE_MODE=false
VERBOSE_MODE=true
TRACE_MODE=true
WEBHOOK_ENABLED=true

# Alert Thresholds
CLIENT_THRESHOLD=10  # Minimum total clients on AP before alerting for 5GHz issues

# Logging Configuration
#LOG_FILE=unifi_5ghz_monitor.log
LOG_FILE=/var/log/unifi_monitor.log  # Alternative log location

# Webhook Configuration
WEBHOOK_TYPE=pushover
# Options: pushover, discord, slack, generic

# Pushover Settings (if using Pushover)
WEBHOOK_URL=https://api.pushover.net/1/messages.json
PUSHOVER_TOKEN=token
PUSHOVER_USER=user

# Discord Settings (if using Discord)
# WEBHOOK_TYPE=discord
# WEBHOOK_URL=https://discord.com/api/webhooks/your/webhook/url
# DISCORD_USERNAME=UniFi Monitor

# Slack Settings (if using Slack)
# WEBHOOK_TYPE=slack
# WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook

# Generic Webhook Settings (if using custom webhook)
# WEBHOOK_TYPE=generic
# WEBHOOK_URL=https://your-webhook-endpoint.com/notify
